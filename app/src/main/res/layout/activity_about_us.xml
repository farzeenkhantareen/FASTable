<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Blue Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#0A2C60"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_arrow_back"
                card_view:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="About Us"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Section Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Thinkers"
            android:textAlignment="center"
            android:textColor="#0A2C60"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp" />

        <!-- Cards Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingBottom="24dp">

            <!-- Card Template -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="6dp"
                card_view:cardUseCompatPadding="true"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/profileImage1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/img_demo"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:layout_marginBottom="8dp" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/nameText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muhammad Ahsan"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/emailText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="i230553@isb.nu.edu.pk"
                        android:textColor="#3466AF"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <!-- LinkedIn Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/linkedinIcon1"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_linkedin"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/linkedinText1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="linkedin.com/muhammad-ahsan"
                            android:textColor="#0A2C60"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Card 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="6dp"
                card_view:cardUseCompatPadding="true"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/profileImage2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ali"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:layout_marginBottom="8dp" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/nameText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ali Ahmad Riaz"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/emailText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="i232528@isb.nu.edu.pk"
                        android:textColor="#3466AF"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <!-- LinkedIn Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/linkedinIcon2"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_linkedin"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/linkedinText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="linkedin.com/ali-ahmed-riaz"
                            android:textColor="#0A2C60"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="8dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="6dp"
                card_view:cardUseCompatPadding="true"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_horizontal">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/profileImage3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/farzeen"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true"
                        android:layout_marginBottom="8dp" />

                    <!-- Name -->
                    <TextView
                        android:id="@+id/nameText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Farzeen Khan Tareen"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp" />

                    <!-- Email -->
                    <TextView
                        android:id="@+id/emailText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="i230721@isb.nu.edu.pk"
                        android:textColor="#3466AF"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp" />

                    <!-- LinkedIn Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/linkedinIcon3"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_linkedin"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/linkedinText3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="linkedin.com/farzeen-khan-tareen"
                            android:textColor="#0A2C60"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
