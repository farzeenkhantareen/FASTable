<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    tools:context=".Home">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:paddingTop="15sp"
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:background="#0D2A5C"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_menu"
        app:title="FASTable"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white"
        app:menu="@menu/top_app_bar_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scrollbars="none"
        android:fadeScrollbars="false"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example Course Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Software Design and Analysis"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="#0D2A5C"
                        android:layout_marginBottom="13dp"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_location"
                            app:tint="#444" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Room 101"
                            android:textColor="#444"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_clock"
                            app:tint="#444" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="9:00 AM - 10:30 AM"
                            android:textColor="#444"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Additional Cards -->
            <include layout="@layout/item_course_card"
                android:id="@+id/card_data_structures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:tag="Data Structures|Room 205|11:00 AM - 12:30 PM" />

            <include layout="@layout/item_course_card"
                android:id="@+id/card_networks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:tag="Computer Networks|Lab 3|2:00 PM - 3:30 PM" />

            <include layout="@layout/item_course_card"
                android:id="@+id/card_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:tag="Database Systems|Room 301|4:00 PM - 5:30 PM" />

            <include layout="@layout/item_course_card"
                android:id="@+id/card_ml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:tag="Machine Learning|Room 202|9:00 AM - 10:30 AM" />

            <include layout="@layout/item_course_card"
                android:id="@+id/card_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:tag="Web Development|Lab 1|11:00 AM - 12:30 PM" />
            <include layout="@layout/item_course_card"
                android:id="@+id/card_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:tag="App Development|Lab 1|11:00 AM - 12:30 PM" />
            <include layout="@layout/item_course_card"
                android:id="@+id/card_se"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:tag="Software Development|Lab 1|11:00 AM - 12:30 PM" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
