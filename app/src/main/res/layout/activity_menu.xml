<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Right-side shadow (fixed width + optional height percent if needed) -->
    <View
        android:id="@+id/rightShadow"
        android:layout_width="70dp"
        android:layout_height="0dp"
        android:background="@drawable/right_side_shadow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Bar Menu -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/top_bar_menu"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_menu_black"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightShadow" />

    <!-- Content Container (menu area ends at shadow start) -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightShadow">

        <!-- Profile Section -->
        <LinearLayout
            android:id="@+id/profileSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/img_demo"
                app:civ_border_width="2dp"
                app:civ_border_color="#E0E0E0"
                android:contentDescription="@string/profile_image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Muhammad Ahsan"
                    android:textColor="@color/navy"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hmahsankhetran@gmail.com"
                    android:textColor="@color/navy"
                    android:textSize="15sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgArrow"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#808080" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#B0B0B0" />

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBatchTimetable"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/batch_timetable"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:cornerRadius="10dp"
            app:backgroundTint="#0A2E5D" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCustomTimetable"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:text="@string/custom_timetable"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#0A2E5D"
            app:cornerRadius="10dp"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#0A2E5D"
            app:strokeWidth="1dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAboutUs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:text="@string/about_us"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#0A2E5D"
            app:cornerRadius="10dp"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#0A2E5D"
            app:strokeWidth="1dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/log_out"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#0A2E5D"
            app:cornerRadius="10dp"
            app:backgroundTint="#FFFFFF"
            app:strokeColor="#0A2E5D"
            app:strokeWidth="1dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
